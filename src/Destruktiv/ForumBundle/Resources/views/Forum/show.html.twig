{% extends '::base.html.twig' %}

{% block body -%}
    <ul class="breadcrumb">
        <li><a href="{{ path("forum") }}">Forum</a></li>
        <li class="active">{{ entity.title }}</li>
    </ul>

    <table class="record_properties">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ entity.id }}</td>
            </tr>
        </tbody>
    </table>

        <ul class="record_actions">
    <li>
        <a href="{{ path('forum') }}">
            Back to the list
        </a>
    </li>
    <li>
        <a href="{{ path('forum_edit', { 'id': entity.id }) }}">
            Edit
        </a>
    </li>
    <li>{{ form(delete_form) }}</li>
</ul>
{% endblock %}
