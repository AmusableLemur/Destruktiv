{% extends '::base.html.twig' %}

{% block body -%}
    <blockquote>
        <p>Veni Vidi Ridi Rekt</p>
        <small>Julius Caesarsallad</small>
    </blockquote>

    {% if app.request.get("link") is not null %}
        <div class="alert alert-success">
            <i class="fa fa-paper-plane fa-fw fa-3x pull-left"></i>
            <strong>Din redirect har skapats</strong><br>
            <span>{{ url("redirect_show", {"link": app.request.get("link")}) }}</span>
        </div>
    {% endif %}

    {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
        {{ form(form) }}
    {% else %}
        <div class="alert alert-danger">
            <i class="fa fa-exclamation-circle fa-fw"></i>
            <strong>Den här funktionen är bara tillgänglig för inloggade användare.</strong>
        </div>
    {% endif %}
{% endblock %}
